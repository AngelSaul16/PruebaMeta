@model PruebaMeta.Models.ViewModels.StudentVM;
@{
    ViewData["Title"] = "Student_detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oStudent.Id == 0)
{
    <h1>Añadir nuevo estudiante</h1>
}
else{
    <h1>Editar estudiante</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Student_detail" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oStudent.Id" />
            <div class="mb-2">
                <label class="form-label" asp-for="oStudent.Nick">Nombre completo</label>
                <input class="form-control form-control-sm" asp-for="oStudent.Nick" type="text" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oStudent.Birth">Fecha de nacimiento</label>
                <input class="form-control form-control-sm" asp-for="oStudent.Birth" type="date" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oStudent.Grade">Curso</label>
                <input class="form-control form-control-sm" asp-for="oStudent.Grade" type="text" />
            </div>
            <div class="mb-2">
                <input class="form-control form-control-sm" asp-for="oStudent.Status" type="hidden" value="Activo" />
            </div>
            <div class="mb-2">
                @if(Model.oStudent.Id == 0){
                    <button class="btn btn-success" type="submit">Guardar</button>
                }
                else{
                    <button class="btn btn-warning" type="submit">Actualizar</button>
                }
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>

