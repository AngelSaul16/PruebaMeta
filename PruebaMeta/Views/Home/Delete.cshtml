@model PruebaMeta.Models.Student
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Seguro que desea eliminar al estudiante </h3><h3><input class="form-control form-control-sm" value="Nick" type="text" readonly/></h3><h3 class="text-danger">?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Delete" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-2">
                <input class="form-control form-control-sm" asp-for="Status" type="hidden" value="Inactivo" />
            </div>
            <div class="mb-2">
                <button class="btn btn-danger" type="submit">Eliminar</button>
                
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>
